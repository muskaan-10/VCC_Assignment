## microservice/index.ji
const express = require('express');
const app = express();

app.get('/hello', (req, res) => {
  res.send('Hello from VM2');
});

app.listen(3000, () => {
  console.log('Microservice running on port 3000');
});

## microservice/package/json
{
  "name": "vcc-microservice",
  "version": "1.0.0",
  "main": "index.js",
  "dependencies": {
    "express": "^4.18.2"
  }
}
